

<li class="timeline-item">
    <div class="timeline-info">
        <span> <%= c.date_submitted.strftime("%d %B %Y") %> </span>
        <!-- <span>March 12, 2016</span> -->
    </div>
    <!-- @TODO -->
    <!-- If it's not the last iteration, have the marker -->
    <!-- How to change pseudo element for different statuses -->
    <%# if c.status == "submitted" %>
        <div class="timeline-marker"></div>
    <%# elsif c.status == "approved" %>
        <!-- <div class="timeline-marker-approved"></div> -->
    <%# elsif c.status == "rejected" %>
        <!-- <div class="timeline-marker-rejected"></div> -->
    <%# end %>

    <div class="timeline-content">
            <%= link_to case_path(c) do %> 
        <h5 class="timeline-title"> 
        <%= c.subject %> 
        </h5>
        <% end %>

        <p class="cname"> <%= c.client_name %> </p>
        <p class="cname"> <%= c.status.titleize %> </p>
        <!-- <p>Nullam vel sem. Nullam vel sem. Integer ante arcu, accumsan a, consectetuer eget, posuere ut, mauris. Donec orci lectus, aliquam ut, faucibus non, euismod id, nulla. Donec vitae sapien ut libero venenatis faucibus. ullam dictum felis eu pede mollis pretium. Pellentesque ut neque.</p> -->
        <p> <%=h truncate(c.summary, :length => 350)%> 
        <%= link_to "See More", case_path(c) %> </p>
        <p> Amount requested: <%= number_to_currency(c.amount_requested) %> </p>
        <p> Amount approved: <%= number_to_currency(c.amount_approved) %> </p>
    </div>
</li>
